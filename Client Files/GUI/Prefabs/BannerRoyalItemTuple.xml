	<Window>
		<BannerRoyalItemTuppleWidget 	ButtonType="Radio" DragWidget="DragWidget" Brush="Inventory.Tuple.SoundBrush"
										Command.Click="ExecuteSelectItem" Command.HoverBegin="ExecuteBeginHint"
										Command.HoverEnd="ExecuteEndHint" Command.EquipItem="ExecuteEquipItem" Command.UnequipItem="ExecuteUnequipItem"
										Command.Opened="ExecuteResetTrade" Command.DropItem="ExecuteDropItem" MainWidget="MainWidget"
										MarginLeft="15" WidgetType="*WidgetType"
										WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="130" SuggestedHeight="130"
										IsEquipable="@IsEquipableItem" ItemType="@TypeId"
										EquipmentIndex="@ItemType" DefaultBrush="!Inventory.Tuple" MarginTop="2" TierName=""
										HoveredCursorState="RightClickLink" >
			<Children>

				<Widget Id="DragWidget" IsVisible="false" WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="130" SuggestedHeight="76" HorizontalAlignment = "Left" VerticalAlignment="Top" Sprite="Inventory\portrait" DoNotPassEventsToChildren="true" IsDisabled="true">
					<Children>
						<ImageIdentifierWidget Id="DragWidgetImage" DataSource="{ImageIdentifier}" ImageId="@Id"
											   AdditionalArgs="@AdditionalArgs" ImageTypeCode="@ImageTypeCode"
											   WidthSizePolicy = "StretchToParent" HeightSizePolicy = "StretchToParent"
											   MarginLeft="!Image.Padding" MarginTop="!Image.Padding" MarginBottom="!Image.Padding" MarginRight="!Image.Padding" />
					</Children>
				</Widget>
				
				<BrushWidget Id="MainWidget" Brush="Frame1.Border" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" DoNotAcceptEvents="true" >
					<Children>
						<Widget WidthSizePolicy = "Fixed" HeightSizePolicy = "Fixed" SuggestedWidth="130" SuggestedHeight="130" HorizontalAlignment = "Center" VerticalAlignment="Center" Sprite="BlankWhiteSquare_9" AlphaFactor="0.4" DoNotAcceptEvents="true" Color="@TierColor" >
							<Children>
								<ImageIdentifierWidget	Id="Body" DataSource="{ImageIdentifier}" DoNotAcceptEvents="true"
														WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="130" SuggestedHeight="76"
														HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="2" ImageId="@Id"
														AdditionalArgs="@AdditionalArgs" ImageTypeCode="@ImageTypeCode"
											   />
							</Children>
						</Widget>
					</Children>
				</BrushWidget>
				
				
			</Children>
		</BannerRoyalItemTuppleWidget>
	</Window>
</Prefab>